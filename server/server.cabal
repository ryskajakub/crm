Executable run-server
  default-language:  Haskell2010
  if flag(profiling)
    ghc-options:     -rtsopts -Wall -O2 -eventlog -threaded
  else
    ghc-options:     -Wall -O2
  main-is:           Main.hs
  hs-source-dirs:    run-server
  if flag(build-run-server)
    buildable: True
    build-depends:
      base >= 4.6 && < 4.9 ,
      server
  else
    buildable: False


Executable insert-pass
  default-language:  Haskell2010
  ghc-options:       -Wall
  main-is:           Main.hs
  hs-source-dirs:    insert-pass
  if flag(build-insert-pass)
    buildable: True
    build-depends:
      base >= 4.6 && < 4.9 ,
      haskeline ,
      transformers ,
      opaleye ,
      scrypt ,
      text , 
      server
  else
    buildable: False

Executable gen-api
  default-language:  Haskell2010
  ghc-options:       -Wall
  main-is:           Main.hs
  hs-source-dirs:    gen-api
  other-modules:
    Rest.Gen.Fay
  if flag(build-gen-api)
    buildable: True
    build-depends:
      base >= 4.6 && < 4.9 ,
      server ,
      rest-core ,
      haskell-src-exts >= 1.16.0 ,
      safe ,
      fclabels ,
      semigroups ,
      uniplate ,
      filepath ,
      directory ,
      Cabal ,
      regex-compat ,
      rest-gen >= 0.17.1
  else
    buildable: False
